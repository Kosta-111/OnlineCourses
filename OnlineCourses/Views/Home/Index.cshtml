@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<CourseModel>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>You can select all the available online courses.</p>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3 course-list">
    @foreach (var i in Model)
    {
        <div class="col">
            <div class="card h-100 text-center">
                <img src="@(i.ImageUrl ?? "/images/no_image.png")" class="card-img-top" alt="@i.Name">
                <div class="card-body">
                    <h5 class="card-title">@i.Name</h5>
                    <p class="card-text">@i.CategoryName (@i.Language)</p>
                    <p class="card-text">
                        @i.Price$
                        @if (i.Discount > 0)
                        {
                            <span class="text-danger fw-bold">@(-i.Discount + "%")</span>
                        }
                    </p>
                </div>
                <div class="card-footer">
                    <a asp-controller="WishList" asp-action="Add" asp-route-id="@i.Id" class="btn btn-info">
                        <i class="bi bi-heart-fill text-danger fs-7"></i>
                        Add to Wish List
                    </a>
                </div>
            </div>
        </div>
    }
</div>
